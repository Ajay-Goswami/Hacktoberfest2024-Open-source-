#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int maxLoot(vector<int>& houses) {
    int n = houses.size();
    if (n == 0) return 0;
    if (n == 1) return houses[0];
    
    vector<int> dp(n);
    dp[0] = houses[0];
    dp[1] = max(houses[0], houses[1]);
    
    for (int i = 2; i < n; ++i) {
        dp[i] = max(dp[i - 1], houses[i] + dp[i - 2]);
    }
    
    return dp[n - 1];
}

int main() {
    int n;
    cin >> n;
    vector<int> houses(n);
    for (int i = 0; i < n; ++i) {
        cin >> houses[i];
    }
    cout << maxLoot(houses) << endl;
    return 0;
}
